<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCollectionFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/enterCollectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_collection_name_string"

        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterCollectionName"
        app:endIconMode="clear_text"
        app:suffixText=".csv"
        style="@style/Theme.MTGCardScanner"
        android:hint="@string/defaultCollectionName">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chooseNewCollectionFolderButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:contentDescription="@string/choose_folder_for_new_collection_string"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/baseline_folder_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:layout_constraintBottom_toTopOf="@id/createNewCollectionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterCollectionName"
        app:layout_constraintVertical_bias="0.593" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedFolderText"
        android:text="@string/current_folder_string"
        app:layout_constraintStart_toEndOf="@id/chooseNewCollectionFolderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/createNewCollectionButton"
        app:layout_constraintTop_toBottomOf="@id/enterCollectionName"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintVertical_bias="0.593"/>

    <Button
        android:id="@+id/createNewCollectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />

</androidx.constraintlayout.widget.ConstraintLayout>